{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "target": "es2017",
        "declaration": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}